rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match all paths to ensure authenticated access only
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // User-specific paths (like profile photos, receipt images, etc.)
    match /users/{userId}/{allUserPaths=**} {
      // Only allow access to the user's own files
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public assets (if needed)
    match /public/{publicFile=**} {
      // Anyone can read, but only authenticated users can write
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
} 